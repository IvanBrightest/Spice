@model int

    <td width="150px">
        <div class="btn-group" role="group" aria-label="Basic example">
            <a class="btn btn-primary text-white" asp-action="Edit" asp-route-id="@Model">
                <i class="fas fa-edit"></i>
            </a>
            <a class="btn btn-success text-white" asp-action="Detail" asp-route-id="@Model">
                <i class="fas fa-info"></i>
            </a>
            <form method="post" action="Delete">
                <button class="btn btn-danger text-white" onclick="confirm('Are you sure you want to delete the category?')" asp-action="Delete" asp-route-id="@Model"><i class="fas fa-trash"></i></button>
            </form>
        </div>
    </td>