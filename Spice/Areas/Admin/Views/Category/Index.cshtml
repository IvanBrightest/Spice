@model IEnumerable<Category> 
@{ 
    ViewData["Title"] = "List Categories";
}

<br /><br />

<div class="border backgroundWhite">
    <div class="row">
        <div class="col-6">
            <h2 class="text-info">Category List</h2>
        </div>
        <div class="col-6 text-right">
            <partial name="_CreateButtomPartial" />
        </div>
    </div>
    <br />
    <div>
        @if (Model.Count() > 0)
        {
            <table class="table table-striped border">
                <tr class="table-secondary">
                    <th>
                        @Html.DisplayNameFor(c => c.Name)
                    </th>
                    <th></th>
                    <th></th>
                </tr>
                @foreach (var item in Model)
                {
                    <tr>
                        <td>@Html.DisplayFor(c => item.Name)</td>
                        <td></td>
                        <partial name="_TableControlButtons" model="@item.Id" />
                    </tr>

                }
            </table>
        }
        else
        {
            <p>No Categories</p>
        }
    </div>
</div> 